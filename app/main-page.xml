<Page xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">

  <ActionBar title="Progress NEXT">
    <NavigationButton text="go back" android.systemIcon = "ic_menu_back"/>
  </ActionBar>

  <drawer:RadSideDrawer>
    <drawer:RadSideDrawer.mainContent>
      <StackLayout >
        <ListView items="{{ dataItems }}">
           <ListView.itemTemplate>
             <StackLayout>
                <Label text="{{ title }}" textWrap="true" class="title"/>
                <Label text="{{ description }}" textWrap="true" class="description" />
              </StackLayout >
           </ListView.itemTemplate>
         </ListView>
      </StackLayout>
    </drawer:RadSideDrawer.mainContent>
    <drawer:RadSideDrawer.drawerContent>
      <StackLayout cssClass="drawerContent">
        <StackLayout cssClass="headerContent">
          <Label text="Progress NEXT"/>
        </StackLayout>
        <StackLayout cssClass="drawerMenuContent">
          <Label text="Login"/>
          <Label text="Sessions"/>
          <Label text="Contacts"/>
          <Label text="About"/>
        </StackLayout>
      </StackLayout>
    </drawer:RadSideDrawer.drawerContent>
  </drawer:RadSideDrawer>
</Page>
